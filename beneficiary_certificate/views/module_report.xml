                                .rec{
                                    width: 100%;
                                    float: left;
                                    padding: 30px 0px 0px 5px;
                                    }
                                .rec .solid {
                                    width: auto;
                                    float: left;
                                    display: block;
                                    text-align: left;
                                    margin: 0px 5px 0px 0px;
                                    }
                                .rec .liquid {
                                    width: 70%;
                                    float: center;
                                    display: block;
                                    text-align: left;
                                    }
